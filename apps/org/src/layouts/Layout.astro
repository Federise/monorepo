---
import { ClientRouter } from 'astro:transitions';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#8b5cf6" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-title" content="Federise" />
    <link rel="apple-touch-icon" href="/icon-192.png" />
    <ClientRouter />
    <script>
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', async () => {
          try {
            // Check if already registered
            const existing = await navigator.serviceWorker.getRegistration('/sw.js');
            if (existing) {
              console.log('[SW] Already registered:', existing.scope);
              return;
            }

            // Register if not already registered
            const reg = await navigator.serviceWorker.register('/sw.js');
            console.log('[SW] Registered:', reg.scope);
          } catch (err) {
            console.error('[SW] Registration failed:', err);
          }
        });
      }
    </script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <title>federise</title>
  </head>
  <body>
    <div class="background-glow"></div>
    <slot />
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
  }

  html,
  body {
    margin: 0;
    padding: 0;
    font-family: 'Inter', system-ui, sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  :root {
    /* Colors */
    --color-bg: #050505;
    --color-bg-subtle: #0f0f0f;
    --color-text: #e0e0e0;
    --color-text-muted: #888;
    --color-text-subtle: #666;
    --color-white: #fff;

    /* Brand Colors */
    --color-primary: #8b5cf6;
    --color-primary-hover: #7c3aed;
    --color-primary-light: rgba(139, 92, 246, 0.15);
    --color-secondary: #06b6d4;
    --color-accent: #f472b6;

    /* Status Colors */
    --color-success: #4ade80;
    --color-success-bg: rgba(74, 222, 128, 0.1);
    --color-success-light: rgba(74, 222, 128, 0.15);
    --color-error: #f87171;
    --color-error-bg: rgba(248, 113, 113, 0.1);
    --color-warning: #facc15;
    --color-warning-bg: rgba(234, 179, 8, 0.1);

    /* Surface Colors */
    --surface-1: rgba(255, 255, 255, 0.02);
    --surface-2: rgba(255, 255, 255, 0.05);
    --surface-3: rgba(255, 255, 255, 0.08);
    --surface-dark: rgba(0, 0, 0, 0.2);
    --surface-darker: rgba(0, 0, 0, 0.3);

    /* Borders */
    --border-subtle: rgba(255, 255, 255, 0.05);
    --border-muted: rgba(255, 255, 255, 0.08);
    --border-normal: rgba(255, 255, 255, 0.1);
    --border-primary: rgba(139, 92, 246, 0.3);
    --border-error: rgba(239, 68, 68, 0.2);

    /* Spacing */
    --space-xs: 0.25rem;
    --space-sm: 0.5rem;
    --space-md: 0.75rem;
    --space-lg: 1rem;
    --space-xl: 1.5rem;
    --space-2xl: 2rem;
    --space-3xl: 3rem;

    /* Border Radius */
    --radius-sm: 6px;
    --radius-md: 8px;
    --radius-lg: 10px;
    --radius-xl: 12px;
    --radius-full: 9999px;

    /* Typography */
    --font-size-xs: 0.7rem;
    --font-size-sm: 0.75rem;
    --font-size-base: 0.85rem;
    --font-size-md: 0.9rem;
    --font-size-lg: 1rem;
    --font-size-xl: 1.25rem;
    --font-size-2xl: 1.75rem;

    /* Transitions */
    --transition-fast: 0.15s;
    --transition-base: 0.2s;
    --transition-slow: 0.3s;

    /* Legacy (for backwards compatibility) */
    --glass-bg: rgba(20, 20, 20, 0.6);
    --glass-border: var(--border-normal);
  }

  /* Custom Scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
  }
  ::-webkit-scrollbar-track {
    background: var(--color-bg);
  }
  ::-webkit-scrollbar-thumb {
    background: #333;
    border-radius: var(--radius-sm);
  }
  ::-webkit-scrollbar-thumb:hover {
    background: #444;
  }

  /* Base Typography */
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    color: var(--color-white);
    margin: 0;
    font-weight: 600;
  }

  p {
    line-height: 1.6;
    color: var(--color-text);
    margin: 0;
  }

  /* Shared Page Styles */
  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-2xl);
    scroll-snap-type: y mandatory;
  }

  .hero {
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative;
    scroll-snap-align: start;
    scroll-snap-stop: always;
  }

  .hero-content {
    max-width: 800px;
  }

  h1 {
    font-size: 4rem;
    line-height: 1.1;
    font-weight: 700;
    letter-spacing: -0.02em;
  }

  .gradient-text {
    background: linear-gradient(to right, var(--color-white), #a78bfa);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Utility Classes */
  .text-muted {
    color: var(--color-text-muted);
  }

  .text-subtle {
    color: var(--color-text-subtle);
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2.5rem;
    }

    main {
      padding: 0 var(--space-lg);
    }
  }
</style>
