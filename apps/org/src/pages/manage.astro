---
import Layout from '../layouts/Layout.astro';
import GatewayManager from '../components/GatewayManager.svelte';
---

<Layout>
  <main>
    <section class="page-header">
      <h1>Manage Gateway</h1>
      <p>View and manage your connected gateway, keys, and permissions.</p>
    </section>

    <section class="content-section">
      <GatewayManager client:load />
    </section>
  </main>
</Layout>

<style>
  .page-header {
    padding: 4rem 0 2rem;
    text-align: center;
  }

  .page-header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }

  .page-header p {
    color: #a0a0a0;
    max-width: 500px;
    margin: 0 auto;
  }

  .content-section {
    padding: 2rem 0 4rem;
  }
</style>
