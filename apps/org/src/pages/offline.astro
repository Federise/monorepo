---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <main>
    <section class="hero">
      <div class="hero-content offline-content">
        <h1>You're Offline</h1>
        <p class="offline-message">
          It looks like you've lost your internet connection. Don't worry,
          your previously visited pages are still available.
        </p>
        <div class="offline-actions">
          <a href="/" class="offline-link">Go to Homepage</a>
          <a href="/manage/connection" class="offline-link">Manage Gateway</a>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .offline-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .offline-message {
    font-size: 1.2rem;
    color: var(--color-text-muted);
    margin: 2rem 0;
    line-height: 1.6;
  }

  .offline-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-top: 3rem;
    flex-wrap: wrap;
  }

  .offline-link {
    padding: 1rem 2rem;
    background: rgba(139, 92, 246, 0.2);
    border: 1px solid rgba(139, 92, 246, 0.3);
    border-radius: 8px;
    color: var(--color-white);
    text-decoration: none;
    font-weight: 600;
    transition: all 0.2s;
  }

  .offline-link:hover {
    background: rgba(139, 92, 246, 0.3);
    border-color: rgba(139, 92, 246, 0.5);
  }

  @media (max-width: 768px) {
    .offline-message {
      font-size: 1rem;
    }

    .offline-actions {
      flex-direction: column;
      align-items: center;
    }

    .offline-link {
      width: 100%;
      max-width: 300px;
      text-align: center;
    }
  }
</style>
