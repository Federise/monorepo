---
import Layout from '../layouts/Layout.astro';
import DeployFlow from '../components/DeployFlow.svelte';
---

<Layout>
  <main>
    <section class="content-section">
      <DeployFlow client:load />
    </section>
  </main>
</Layout>

<style>
  html,
  body {
    margin: 0;
    padding: 0;
    font-family: 'Inter', sans-serif;
    background-color: #020106;
    color: var(--color-text);
    overflow-x: hidden;
    scroll-behavior: smooth;
    background: radial-gradient(circle at 50% 50%, #0f1120 0%, #020106 100%);
  }

  .hero-content {
    text-align: center;
  }

  h1 {
    margin-bottom: 1rem;
  }

  .content-section {
    scroll-snap-align: start;
    padding: 2rem 0 4rem;
  }
</style>
