---
import Layout from '../layouts/Layout.astro';
import DeploymentWizard from '../components/DeploymentWizard.svelte';
---

<Layout>
  <main>
    <header>
      <h1>Deploy <span class="gradient-text">Federise Gateway</span></h1>
      <p class="subtitle">Deploy your gateway to Cloudflare Workers in minutes</p>
    </header>

    <DeploymentWizard client:load />
  </main>
</Layout>

<style>
  main {
    max-width: 1000px;
    margin: 0 auto;
    padding: var(--space-2xl);
    min-height: 100vh;
    overflow-x: hidden;
  }

  header {
    text-align: center;
    margin-bottom: var(--space-3xl);
    padding-top: var(--space-2xl);
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 700;
    letter-spacing: -0.02em;
    margin-bottom: var(--space-md);
  }

  .gradient-text {
    background: linear-gradient(to right, var(--color-white), #a78bfa);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .subtitle {
    color: var(--color-text-muted);
    font-size: var(--font-size-lg);
  }

  @media (max-width: 768px) {
    main {
      padding: var(--space-lg);
    }

    h1 {
      font-size: 1.75rem;
    }
  }
</style>
